extends ../layout

block content
    .row
        .col-sm-8
            h1=title
        .col-sm-4
            a(href="/courses/add" class="btn btn-success btn-sm float-right") Create Course
    table.table
        thead
            tr
                th Course Name
                th Course ID
                th Course Duration(Hrs) 
                th Course FEE(USD) 
        tbody
            each course in courses
                tr
                    td=course.name
                    td=course.id
                    td=course.duration
                    td=course.fee
                    td 
                        a(href="/courses/update/"+course._id,class="btn btn-warning",style="margin-right:10px") Edit
                        a(href="/courses/delete/"+course._id,class="btn btn-danger",style="margin-right:10px") Delete
                        